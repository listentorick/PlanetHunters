<?xml version="1.0" encoding="UTF-8" ?>
<Level scale="25">

	<Position x="0" y="-400000"></Position>
	<Events>
		
		<!--- should this position be in terms of the scale (i.e 0, 20 etc)-->
		<Spawn type="ColonyShip" when="5">
			<Position from="Top" x="-600000"/>
			<Velocity x="0" y="-50000"></Velocity>
		</Spawn> 
		
		<Spawn type="ColonyShip" when="15">
			<Position from="Left" y="-400000"/>
			<Velocity x="50000" y="0"></Velocity>
		</Spawn> 
		
		
		<Spawn type="ColonyShip" when="40">
			<Position from="Right" y="-100000"/>
			<Velocity x="-50000" y="0"></Velocity>
		</Spawn> 
		
		<Spawn type="Comet" when="65"> <!--- will hit planet (via sun) . Player should throw into worm hole-->
			<Position from="Top" x="0"/>
			<Velocity x="0" y="-100000"></Velocity>
		</Spawn>
		
		<Spawn type="ColonyShip" when="90">
			<Position from="Bottom" x="-600000"/>
			<Velocity x="0" y="200000"></Velocity>
		</Spawn> 
		
		<Spawn type="ColonyShip" when="130">
			<Position from="Bottom" x="-600000"/>
			<Velocity x="0" y="100000"></Velocity>
		</Spawn> 
		
		
		<Spawn type="Comet" when="150"> 
			<Position from="Bottom" x="-600000"/>
			<Velocity x="0" y="100000"></Velocity>
		</Spawn>
		
		
		
	</Events>
	
	<Bodies>

		

		<Planet Mass="1e+25" SOI="150000" Type="Red">
			<Position x="-600000" y="-100000"></Position>
			<Resources>
				<Resource Max="50" Current="50" Type="Food"> </Resource>
				<Resource Max="50" Current="0" Type="People"> </Resource>
			</Resources>
		</Planet>
		
		<Sun>
			<Position x="-100000" y="-50000"></Position>
		</Sun>
		
		<WormHole>
			<Position x="500000" y="-30000"></Position>
		</WormHole>
	</Bodies>

</Level>

